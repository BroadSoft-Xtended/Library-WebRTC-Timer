.bdsft-webrtc
  .timer
    position absolute
    top 3px
    left 0px
    width 100%
    text-align center
    font-family arial
    font-size 16px
    top 11px
    color white
    .text
      text-align center

    &:not(.sendVideo):not(.receiveVideo)
      position relative
      margin-right 10px

    &.enableCallTimer.started
      {fadeIn}

    &:not(.started)
    &:not(.enableCallTimer)
      {fadeOut}

@css {
  .bdsft-webrtc .timer {
    color: <%= timerColor %>;
  }
}

