@import 'node_modules/webrtc-core/styles/variables'

.bdsft-client
  .timer
    position absolute
    top 3px
    left 0px
    width 100%
    text-align center
    font-family arial
    font-size 16px
    top 11px
    color white
    .text
      text-align center
  @css {
    .bdsft-client .timer {
      color: <%= timerColor %>;
    }
  }

  .timer.audioOnly
    position relative
    margin-right 10px

  .timer.enableCallTimer.started
    {fadeIn}

  .timer:not(.started)
    {fadeOut}
